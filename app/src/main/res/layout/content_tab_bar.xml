<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/tool_bar_background"
    android:layout_marginBottom="2dp">

    <LinearLayout
        android:id="@+id/variant_0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cont_tab_bar_stories"
            android:textSize="25sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/variant_0_strip"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/strip"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/variant_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cont_tab_bar_video"
            android:textSize="25sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/variant_1_strip"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/strip"
            android:visibility="gone"
            tools:visibility="visible"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/variant_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cont_tab_bar_favourites"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:gravity="center"/>

        <TextView
            android:id="@+id/variant_2_strip"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/strip"
            android:visibility="gone"
            tools:visibility="visible"/>

    </LinearLayout>

</LinearLayout>