<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/content_tool_bar"
            android:id="@+id/tool_bar" />

        <include layout="@layout/content_tab_bar"
            android:id="@+id/tab_bar" />

        <include layout="@layout/content_top_news"
            android:id="@+id/top_news" />

        <include layout="@layout/content_count_bar_top_news"
            android:id="@+id/count_bar_top_news" />

        <include layout="@layout/content_all_news"
            android:id="@+id/all_news" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>